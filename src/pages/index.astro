---
import Question from '../components/Question.tsx';
import Layout from '../layouts/Layout.astro';
import type { QuestionResponse } from '../models/trivia';

const response = await fetch("https://the-trivia-api.com/v2/questions?limit=10&region=US");
const questions = await response.json() as QuestionResponse;
---

<Layout title="Welcome to Astro.">
	<main class="mt-4 mx-2 mb-10">
		<article class="text-center font-semibold">
		<h1 class="text-2xl">It's Time For Trivia!</h1>
			{questions.map(question => (
				<Question question={question} client:load />
			))}
		</article>
	</main>
</Layout>
